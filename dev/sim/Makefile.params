TASK_QUEUE_SIZE ?= 128
RUN_QUEUE_SIZE ?= 64
WAIT_PER_TICK ?= 128

TASKS_TO_SEND ?= $(TASK_QUEUE_SIZE)
TASKS_TO_READ ?= 512

CFLAGS += -DTASK_QUEUE_SIZE=$(TASK_QUEUE_SIZE) \
					-DRUN_QUEUE_SIZE=$(RUN_QUEUE_SIZE) \
					-DWAIT_PER_TICK=$(WAIT_PER_TICK) \
					-DTASKS_TO_SEND=$(TASKS_TO_SEND) \
					-DTASKS_TO_READ=$(TASKS_TO_READ)
